<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".Controllers.BroadcastChannel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:id="@+id/Top_layout">

        <Button
            android:id="@+id/home"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_alignParentRight="true"
            android:text="Home" />
        <TextView
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Broadcast Channel" />

        <TextView
            android:id="@+id/contact_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:text="Broadcast from User"        />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:layout_below="@id/Top_layout">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/chat_recycler_send"
            android:layout_alignParentLeft="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:id="@+id/bottom_layout">

        <EditText
            android:id="@+id/bc_input"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_above="@id/make_broadcast"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:hint="Write message here"
            android:padding="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Make Broadcast"
            android:layout_alignParentBottom="true"
            android:id="@+id/make_broadcast"
            android:textColor="@color/design_default_color_primary_dark"
            />

    </RelativeLayout>


</RelativeLayout>