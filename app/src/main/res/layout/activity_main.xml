<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:background="@color/teal_primary"
    tools:context=".Controllers.MainActivity">

    <!-- User Details TextView -->
    <TextView
        android:id="@+id/user_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="24dp"/>

    <!-- Logout Button -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <ImageButton
            android:id="@+id/logout"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logout"
            android:background="@android:color/transparent"
            android:contentDescription="Logout Button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


    <!-- Contacts Button -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <ImageButton
            android:id="@+id/contact"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/contacts"
            android:background="@android:color/transparent"
            android:contentDescription="Contacts Button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <!-- Messaging Button -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <ImageButton
            android:id="@+id/message"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/messaging"
            android:background="@android:color/transparent"
            android:contentDescription="Messaging Button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messaging"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <!-- Broadcast Button -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <ImageButton
            android:id="@+id/btn_broadcast"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/broadcast"
            android:background="@android:color/transparent"
            android:contentDescription="Broadcast Button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broadcast"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</LinearLayout>
